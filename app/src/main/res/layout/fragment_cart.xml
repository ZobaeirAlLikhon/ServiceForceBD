<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:listitem="@layout/cart_list"
        />

    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="65dp"
         android:background="#18FFFF"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toTopOf="@+id/cart_recyclerview"
         app:layout_constraintVertical_bias="1.0"
         tools:ignore="MissingConstraints"
         tools:layout_editor_absoluteX="0dp">

         <Button
             android:id="@+id/order"
             android:layout_width="wrap_content"
             android:layout_height="64dp"
             android:layout_alignParentEnd="true"
             android:layout_marginEnd="1dp"
             android:backgroundTint="#FFFF00"
             android:text="Order Now"
             android:textAllCaps="false"
             android:textColor="@color/black"
             android:textSize="20dp"
             tools:ignore="MissingConstraints" />

         <TextView
             android:id="@+id/tottalPrice"
             android:layout_width="260dp"
             android:layout_height="32dp"
             android:text="Tottal Price="
             android:textSize="20dp"
             android:textColor="@color/black"
             />

         <TextView
             android:id="@+id/tottalProduct"
             android:layout_below="@+id/tottalPrice"
             android:layout_width="260dp"
             android:layout_height="32dp"
             android:text="Tottal Product="
             android:textColor="@color/black"
             android:textSize="20dp" />
     </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>