<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:padding="10dp"
        android:outlineSpotShadowColor="@color/black">


        <TextView
            android:id="@+id/proName"
            android:layout_width="206dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/round_shape_green"
            android:gravity="center"
            android:text="Product Name"
            android:textColor="#FAFAFF"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/proImg"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="249dp"
            android:layout_marginBottom="139dp"
            android:background="@drawable/text_view_shape"
            android:padding="15dp"
            android:src="@drawable/cow2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/price11"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="87dp"
            android:gravity="center|right"
            android:text="price:  1000$"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/eligantbutton"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="87dp"
            app:backGroundColor="@color/primaryLightColor"
            app:initialNumber="1"
            app:textColor="@color/black"
            app:textSize="8dp" />

        <Button
            android:id="@+id/booking"
            android:layout_width="158dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="204dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="22dp"
            android:gravity="center"
            android:text="next" />

        <Button
            android:id="@+id/addToCart"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="223dp"
            android:layout_marginBottom="22dp"
            android:drawableLeft="@drawable/cart_foreground"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productDec"
            android:layout_width="204dp"
            android:layout_height="68dp"
            android:layout_above="@+id/price11"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="163dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="27dp"
            android:justificationMode="inter_word"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textAppearance="@style/monospaceMediumText"
            android:textColor="#020202"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="211dp"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>