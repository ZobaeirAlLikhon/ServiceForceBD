<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/black"
        android:padding="10dp">


        <TextView
            android:id="@+id/proName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/round_shape_green"
            android:gravity="center"
            android:text="Product Name"
            android:textColor="#FAFAFF"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/proImg"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="32dp"
            android:layout_below="@id/proName"
            android:layout_alignStart="@id/proName"
            android:background="@drawable/text_view_shape"
            android:padding="15dp"
            android:src="@drawable/cow2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/productDec"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_below="@id/proName"
            android:layout_alignTop="@id/proImg"
            android:layout_alignEnd="@+id/proName"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@id/proImg"
            android:justificationMode="inter_word"
            android:padding="5dp"
            android:textAppearance="@style/monospaceMediumText"
            android:textColor="#333"
            tools:text="Lorem printer took a galley" />

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/eligantbutton"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_below="@id/proImg"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_alignStart="@id/proImg"
            app:backGroundColor="@color/white"
            app:initialNumber="1"
            app:textColor="@color/black"
            app:textSize="6dp" />

        <TextView
            android:id="@+id/price11"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/productDec"
            android:layout_toEndOf="@id/eligantbutton"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:gravity="center|right"
            android:text="Starts from: 1000$"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/addToCart"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_below="@id/eligantbutton"
            android:layout_alignStart="@id/eligantbutton"
            android:layout_alignLeft="@+id/eligantbutton"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/cart_foreground"
            android:text="CART"
            android:textAllCaps="false"
            android:textStyle="bold" />



        <Button
            android:id="@+id/booking"
            android:layout_width="158dp"
            android:layout_height="53dp"
            android:layout_below="@id/price11"
            android:layout_toEndOf="@id/addToCart"
            android:layout_toRightOf="@+id/addToCart"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="next" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>